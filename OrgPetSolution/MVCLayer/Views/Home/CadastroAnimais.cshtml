
@{
    ViewBag.Title = "Create";
}


<div class="tab-pane tabs-animation fade active show" id="tab-content-1" role="tabpanel">
    <div class="main-card mb-3 card">
        <div class="card-body">
            <h5 class="card-title">Tabela Cadastro Animal</h5>
            <form class="">
                <div class="position-relative row form-group">
                    <label for="TextBoxNomeCliente" class="col-sm-2 col-form-label">Nome</label>
                    <div class="col-sm-10"><input name="password" id="TextBoxNomeCliente" placeholder="Zeus" type="NomeCliente" class="form-control"></div>
                </div><div class="position-relative row form-group">
                    <label for="DataNascimentoCliente" class="col-sm-2 col-form-label">Nascimento</label>
                    <div class="col-sm-10"><input name="CPFCliente" id="CPFCliente" placeholder="00/00/0000" type="CPF" class="form-control"></div>
                </div><div class="position-relative row form-group">
                    <label for="CPFCliente" class="col-sm-2 col-form-label">Raça</label>
                    <div class="col-sm-10"><input name="CPFCliente" id="CPFCliente" placeholder="PitBull" type="CPF" class="form-control"></div>
                </div><div class="position-relative row form-group">
                    <label for="TelefoneCliente" class="col-sm-2 col-form-label">Castrado ?</label>
                    <div class="col-sm-10"><input name="TelefoneCliente" id="TelefoneCliente" placeholder="SIM - NÃO" type="telefone" class="form-control"></div>
                </div><div class="position-relative row form-group">
                    <label for="CelularCliente" class="col-sm-2 col-form-label">MicroChip</label>
                    <div class="col-sm-10"><input name="TelefoneCliente" id="TelefoneCliente" placeholder="" type="telefone" class="form-control"></div>
                </div><div class="position-relative row form-group">
                    <label for="EnderecoCliente" class="col-sm-2 col-form-label">Cor</label>
                    <div class="col-sm-10"><select name="EnderecoCliente" id="EnderecoCliente" class="form-control"></select></div>
                </div>
                <div class="position-relative row form-group">
                    <label for="SenhaCliente" class="col-sm-2 col-form-label">Descrição</label>
                    <div class="col-sm-10"><input name="Senha" id="SenhaCliente" placeholder="" type="Senha" class="form-control"></div>
                </div>



                <div class="position-relative row form-group">
                    <label for="exampleFile" class="col-sm-2 col-form-label">Foto do Animal</label>
                    <div class="col-sm-10">
                        <input name="file" id="exampleFile" type="file" class="form-control-file">
                        <small class="form-text text-muted"></small>
                    </div>
                </div>

                <div class="position-relative row form-group">
                    <label for="checkbox2" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">

                    </div>
                </div>
                <div class="position-relative row form-check">
                    <div class="col-sm-10 offset-sm-2">
                        <button class="btn-wide btn btn-success">Cadastrar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
